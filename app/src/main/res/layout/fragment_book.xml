<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/old_paper">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal"
        android:background="@drawable/island_topbar"
        android:gravity="center">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/book_topbar_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Book"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:fontFamily="sans-serif-condensed-medium" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topbar"
        android:layout_alignParentBottom="true"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Book + Labels -->
            <LinearLayout
                android:id="@+id/book_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Book Cover -->
                    <FrameLayout
                        android:id="@+id/book_cover"
                        android:layout_width="140dp"
                        android:layout_height="220dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/bookcover_carousel"
                        android:backgroundTint="@color/grey_sweater">
                        <ImageView
                            android:id="@+id/book_cover_image"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:layout_gravity="center"
                            android:focusable="true"
                            android:clickable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless" />
                    </FrameLayout>

                    <!-- Labels -->
                    <RelativeLayout
                        android:id="@+id/book_labels"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/book_cover"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp">

                        <!-- Book Name -->
                        <RelativeLayout
                            android:id="@+id/book_name_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/label_book_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Book Name: "
                                android:lineBreakStyle="normal"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="16sp">
                            </TextView>
                        </RelativeLayout>

                        <!-- Categories -->
                        <RelativeLayout
                            android:id="@+id/edition_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/book_name_layout"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/label_categories"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Categories: "
                                android:lineBreakStyle="normal"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="16sp">
                            </TextView>
                        </RelativeLayout>

                        <!-- Release Year -->
                        <RelativeLayout
                            android:id="@+id/year_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/edition_layout"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/label_release_year"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Release Year: "
                                android:lineBreakStyle="normal"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="16sp">
                            </TextView>
                        </RelativeLayout>

                        <!-- Author -->
                        <RelativeLayout
                            android:id="@+id/author_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/year_layout"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/label_author"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Author: "
                                android:lineBreakStyle="normal"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="16sp">
                            </TextView>
                        </RelativeLayout>

                        <!-- Page Number -->
                        <RelativeLayout
                            android:id="@+id/page_number_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/author_layout"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/label_page_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Page Number: "
                                android:lineBreakStyle="normal"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="16sp">
                            </TextView>
                        </RelativeLayout>

                        <!-- ISBN -->
                        <RelativeLayout
                            android:id="@+id/isbn_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/page_number_layout"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/label_isbn_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ISBN: "
                                android:lineBreakStyle="normal"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="16sp">
                            </TextView>
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

            <View
                android:id="@+id/review_divisor"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/book_layout"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="@color/grey_sweater" />

            <!-- Status + Review + Rating -->
            <RelativeLayout
                android:id="@+id/srr_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/review_divisor">

                <LinearLayout
                    android:id="@+id/srr2_layout"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <!-- Status -->
                    <RelativeLayout
                        android:id="@+id/status_menu"
                        android:layout_width="160dp"
                        android:layout_height="44dp"
                        android:background="@drawable/island_topbar"
                        android:backgroundTint="@color/watch_green"
                        android:layout_margin="10dp">

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/status_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:background="@color/transparent"
                            android:popupBackground="@color/nav_white"
                            android:spinnerMode="dropdown"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:theme="@style/ThemeOverlay.AppCompat.Light" />
                    </RelativeLayout>

                    <!-- Review -->
                    <RelativeLayout
                        android:id="@+id/review_button"
                        android:layout_width="160dp"
                        android:layout_height="44dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/island_topbar"
                        android:backgroundTint="@color/watch_green"
                        android:layout_margin="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:foreground="?attr/selectableItemBackgroundBorderless">

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="30dp"
                                android:text="Review"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:gravity="center"
                                android:layout_marginEnd="4dp" />

                            <ImageView
                                android:id="@+id/pencil_review_icon"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/pencil_icon_ui"
                                app:tint="@color/black"
                                android:padding="4dp" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <!-- Rating -->
                <RelativeLayout
                    android:id="@+id/rating_layout"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@+id/srr2_layout">

                    <TextView
                        android:id="@+id/rating_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rate This Book"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="2dp" />

                    <RatingBar
                        android:id="@+id/book_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rating_label"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:numStars="5"
                        android:stepSize="0.5"
                        android:rating="0"
                        android:isIndicator="true"
                        android:progressTint="@color/gold"
                        android:progressBackgroundTint="@color/grey_sweater"
                        style="?android:attr/ratingBarStyleSmall"
                        android:scaleX="2"
                        android:scaleY="2" />

                </RelativeLayout>
            </RelativeLayout>

            <View
                android:id="@+id/review_divisor2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/srr_layout"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="@color/grey_sweater" />

            <!-- Buttons -->
            <RelativeLayout
                android:id="@+id/buttons_details_book_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/review_divisor2">

                <LinearLayout
                    android:id="@+id/buttons_book_linear_layout"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Book Details -->
                    <RelativeLayout
                        android:id="@+id/book_details_layout"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/book_details_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/details_icon_ui"
                            android:layout_centerHorizontal="true"
                            android:scaleType="fitCenter"
                            android:padding="10dp"
                            app:tint="@color/black"
                            android:layout_marginTop="-5dp">
                        </ImageView>

                        <TextView
                            android:id="@+id/book_details_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Book Details"
                            android:layout_below="@+id/book_details_image"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="-8dp" />

                    </RelativeLayout>

                    <View
                        android:id="@+id/vertical_divisor"
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/grey_sweater" />

                    <!-- Share -->
                    <RelativeLayout
                        android:id="@+id/share_book_layout"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/share_book_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/share_icon_ui"
                            android:layout_centerHorizontal="true"
                            android:scaleType="fitCenter"
                            android:padding="10dp"
                            app:tint="@color/black"
                            android:layout_marginTop="-5dp">
                        </ImageView>

                        <TextView
                            android:id="@+id/share_book_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Share"
                            android:layout_below="@+id/share_book_image"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="-8dp" />

                    </RelativeLayout>

                </LinearLayout>
            </RelativeLayout>

            <View
                android:id="@+id/review_divisor3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/buttons_details_book_layout"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="@color/grey_sweater" />

            <!-- Rating History  -->
            <RelativeLayout
                android:id="@+id/rating_history_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/review_divisor3"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/rating_history_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rating History"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="8dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rating_history_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rating_history_title"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="8dp"
                    android:nestedScrollingEnabled="false"
                    tools:itemCount="5"
                    tools:listitem="@layout/item_rating_history" />
            </RelativeLayout>

            <!-- Buttons -->
            <LinearLayout
                android:id="@+id/buttons_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/rating_history_section"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@color/old_paper"
                android:padding="15dp">

                <!-- Cancel Button -->
                <RelativeLayout
                    android:id="@+id/cancel_button"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/island_topbar"
                    android:backgroundTint="@color/grey_sweater"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Cancel"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <!-- Save Button -->
                <RelativeLayout
                    android:id="@+id/save_button"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/island_topbar"
                    android:backgroundTint="@color/watch_green"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Save Book"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
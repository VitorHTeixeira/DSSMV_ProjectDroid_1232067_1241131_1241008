<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/old_paper">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="54dp"
            android:layout_height="match_parent"
            android:background="@drawable/island_topbar"
            android:layout_marginStart="10dp">
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/island_topbar"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center">
            <SearchView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollIndicators="none"
        android:layout_below="@+id/topbar"
        android:layout_above="@id/navbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Latest Reviews -->
            <TextView
                android:id="@+id/review_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="Latest Reviews"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:fontFamily="sans-serif-condensed-medium"/>
            <FrameLayout
                android:id="@+id/review_carousel_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mainscreen_bookcarousel_height"
                android:layout_below="@+id/review_title"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/bookcover_red">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/review_carousel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_bookcover"
                    tools:itemCount="3" />
            </FrameLayout>
            <View
                android:id="@+id/review_divisor"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/review_carousel_container"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="@dimen/divisor_marginTop"
                android:layout_marginBottom="@dimen/divisor_marginBottom"
                android:background="@color/grey_sweater" />

            <!-- Yearly Statistics -->
            <TextView
                android:id="@+id/yearly_stats_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="12dp"
                android:layout_below="@+id/review_divisor"
                android:text="Yearly Statistics"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:fontFamily="sans-serif-condensed-medium"/>
            <FrameLayout
                android:id="@+id/stat_carousel_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/yearly_stats_title"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/bookcover_red">
                <!-- Apagar o android:background do GridLayout apÃ³s tirar o vermelho do FrameLayout -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/old_paper"
                    android:layout_gravity="center_vertical"
                    android:padding="8dp"
                    android:columnCount="2"
                    android:rowCount="2">
                    <TextView
                        android:layout_columnWeight="1"
                        android:layout_column="0"
                        android:layout_row="0"
                        android:text="Average Rating: "
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:textAlignment="viewStart" />
                    <TextView
                        android:layout_columnWeight="1"
                        android:layout_column="1"
                        android:layout_row="0"
                        android:text="Total Books Read: "
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:textAlignment="viewStart" />
                    <TextView
                        android:layout_columnWeight="1"
                        android:layout_column="0"
                        android:layout_row="1"
                        android:text="Best Month: "
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:textAlignment="viewStart" />
                    <TextView
                        android:layout_columnWeight="1"
                        android:layout_column="1"
                        android:layout_row="1"
                        android:text="Median Rating: "
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:textAlignment="viewStart" />
                </GridLayout>
            </FrameLayout>
            <View
                android:id="@+id/yearly_stats_divisor"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/stat_carousel_container"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="@dimen/divisor_marginTop"
                android:layout_marginBottom="@dimen/divisor_marginBottom"
                android:background="@color/grey_sweater" />

            <!-- Latest Wishlisted Books -->
            <TextView
                android:id="@+id/wishlist_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="12dp"
                android:layout_below="@+id/yearly_stats_divisor"
                android:text="Latest Wishlisted Books"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:fontFamily="sans-serif-condensed-medium"/>
            <FrameLayout
                android:id="@+id/wishlist_carousel_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mainscreen_bookcarousel_height"
                android:layout_below="@+id/wishlist_title"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/bookcover_red">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/wishlist_carousel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_bookcover"
                    tools:itemCount="5" />
            </FrameLayout>
        </RelativeLayout>
    </ScrollView>

    <!-- Navigation Bar -->
    <LinearLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@drawable/rounded_navbar"
        android:orientation="horizontal" />
</RelativeLayout>
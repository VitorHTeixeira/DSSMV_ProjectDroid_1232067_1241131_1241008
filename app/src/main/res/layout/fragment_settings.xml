<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/old_paper">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal"
        android:background="@drawable/island_topbar"
        android:gravity="center">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Welcome"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:fontFamily="sans-serif-condensed-medium" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_below="@+id/topbar"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- User Info Overview-->
            <LinearLayout
                android:id="@+id/user_info_overview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/image_circle"
                    android:layout_gravity="center_horizontal">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/perfil_icon_ui"
                        app:tint="@color/black"
                        android:layout_margin="22dp" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Username"
                    android:textAlignment="center"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="26sp" />
            </LinearLayout>

            <View
                android:id="@+id/user_info_divisor"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/user_info_overview"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="@dimen/divisor_marginTop"
                android:layout_marginBottom="@dimen/divisor_marginBottom"
                android:background="@color/grey_sweater" />

            <!-- Menus colapsÃ¡veis -->
            <LinearLayout
                android:id="@+id/collapsible_menus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_info_divisor"
                android:orientation="vertical">

                <!-- App Theme -->
                <RelativeLayout
                    android:id="@+id/app_theme_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:background="@drawable/island_topbar"
                    android:backgroundTint="@color/watch_green"
                    android:layout_margin="10dp">
                    <GridLayout
                        android:id="@+id/app_theme_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:rowCount="1"
                        android:layout_margin="10dp">

                        <TextView
                            android:id="@+id/app_theme_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="App Theme"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/app_theme_arrow"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_arrow_right"
                            android:layout_gravity="end|center"
                            android:focusable="true"
                            android:clickable="true" />
                    </GridLayout>
                    <RadioGroup
                        android:id="@+id/app_theme_radio_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/app_theme_container"
                        android:orientation="vertical"
                        android:layout_marginStart="24dp"
                        android:visibility="gone">
                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Light Mode"
                            android:textSize="16sp"
                            android:textColor="@color/black" />
                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Dark Mode"
                            android:textSize="16sp"
                            android:textColor="@color/black" />
                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="System Preference"
                            android:textSize="16sp"
                            android:textColor="@color/black" />
                    </RadioGroup>
                </RelativeLayout>
                <!-- Export App Data -->
                <RelativeLayout
                    android:id="@+id/export_app_data_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:background="@drawable/island_topbar"
                    android:backgroundTint="@color/watch_green"
                    android:layout_margin="10dp"
                    android:layout_below="@+id/app_theme_menu">
                    <GridLayout
                        android:id="@+id/export_app_data_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:rowCount="1"
                        android:layout_margin="10dp">

                        <TextView
                            android:id="@+id/export_app_data_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Export App Data"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/export_app_data_arrow"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_arrow_right"
                            android:layout_gravity="end|center"
                            android:focusable="true"
                            android:clickable="true" />
                    </GridLayout>
                    <RadioGroup
                        android:id="@+id/export_app_data_radio_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/export_app_data_container"
                        android:orientation="vertical"
                        android:layout_marginStart="24dp"
                        android:visibility="gone">
                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="CSV"
                            android:textSize="16sp"
                            android:textColor="@color/black" />
                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="JSON"
                            android:textSize="16sp"
                            android:textColor="@color/black" />
                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="XLSX"
                            android:textSize="16sp"
                            android:textColor="@color/black" />
                    </RadioGroup>
                </RelativeLayout>
                <!-- Force Saving Data -->
                <RelativeLayout
                    android:id="@+id/force_save_data_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:background="@drawable/island_topbar"
                    android:backgroundTint="@color/watch_green"
                    android:layout_margin="10dp"
                    android:layout_below="@+id/export_app_data_menu">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Force Saving App Data"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:layout_centerVertical="true" />
                </RelativeLayout>
                <!-- Profile Settings -->
                <RelativeLayout
                    android:id="@+id/profile_settings_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:background="@drawable/island_topbar"
                    android:backgroundTint="@color/watch_green"
                    android:layout_margin="10dp"
                    android:layout_below="@+id/force_save_data_menu">
                    <GridLayout
                        android:id="@+id/profile_settings_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:rowCount="1"
                        android:layout_margin="10dp">

                        <TextView
                            android:id="@+id/profile_settings_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Profile Settings"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/profile_settings_arrow"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_arrow_right"
                            android:layout_gravity="end|center"
                            android:focusable="true"
                            android:clickable="true" />
                    </GridLayout>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/old_paper">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal"
        android:background="@drawable/island_topbar"
        android:gravity="center">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Profile Settings"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:fontFamily="sans-serif-condensed-medium" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- Profile Settings -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_below="@+id/topbar"
        android:layout_above="@id/navbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Username -->
            <RelativeLayout
                android:id="@+id/change_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@drawable/island_topbar"
                android:backgroundTint="@color/watch_green"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:focusable="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/edit_username_icon"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/label_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Username: "
                        android:inputType="text"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/value_your_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="86dp"
                        android:text="Your Username"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:paddingStart="4dp"
                        android:singleLine="true"
                        android:ellipsize="end" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/edit_username_image_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/check_icon_ui"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:focusable="true"
                    android:clickable="true"
                    android:padding="8dp"
                    android:background="@drawable/circe_ripple" />
            </RelativeLayout>

            <!-- password -->
            <RelativeLayout
                android:id="@+id/change_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/change_username"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@drawable/island_topbar"
                android:backgroundTint="@color/watch_green"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:focusable="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/edit_password_icon"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/label_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Password: "
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/value_user_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="86dp"
                        android:inputType="textPassword"
                        app:passwordToggleEnabled="true"
                        android:autofillHints="password"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:paddingStart="4dp"
                        android:singleLine="true"
                        android:ellipsize="end" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/edit_password_image_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/check_icon_ui"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:focusable="true"
                    android:clickable="true"
                    android:padding="8dp"
                    android:background="@drawable/circe_ripple" />
            </RelativeLayout>

            <!-- email -->
            <RelativeLayout
                android:id="@+id/change_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/change_password"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@drawable/island_topbar"
                android:backgroundTint="@color/watch_green"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:focusable="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/edit_email_icon"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/label_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email: "
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/value_user_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="user@isep.ipp.pt"
                        android:minWidth="86dp"
                        android:inputType="textEmailAddress"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:paddingStart="4dp"
                        android:singleLine="true"
                        android:ellipsize="end" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/edit_email_image_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/check_icon_ui"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:focusable="true"
                    android:clickable="true"
                    android:padding="8dp"
                    android:background="@drawable/circe_ripple" />
            </RelativeLayout>

            <!-- N Telemóvel -->
            <RelativeLayout
                android:id="@+id/change_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/change_email"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@drawable/island_topbar"
                android:backgroundTint="@color/watch_green"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:focusable="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/edit_phone_icon"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/label_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone Number: "
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/value_user_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:minWidth="86dp"
                        android:paddingStart="4dp"
                        android:singleLine="true"
                        android:text="+351 912 345 678"
                        android:inputType="phone"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/edit_phone_image_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/check_icon_ui"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:focusable="true"
                    android:clickable="true"
                    android:padding="8dp"
                    android:background="@drawable/circe_ripple" />
            </RelativeLayout>

            <!-- Morada -->
            <RelativeLayout
                android:id="@+id/change_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/change_phone"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@drawable/island_topbar"
                android:backgroundTint="@color/watch_green"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:focusable="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/edit_address_icon"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/label_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address: "
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/value_user_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:minWidth="86dp"
                        android:paddingStart="4dp"
                        android:singleLine="true"
                        android:text="Rua de São Tomé, Porto"
                        android:inputType="text"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/edit_adress_image_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/check_icon_ui"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:focusable="true"
                    android:clickable="true"
                    android:padding="8dp"
                    android:background="@drawable/circe_ripple" />
            </RelativeLayout>

            <!-- Formato de Data -->
            <RelativeLayout
                android:id="@+id/change_date_format"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/change_address"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@drawable/island_topbar"
                android:backgroundTint="@color/watch_green"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:focusable="false">

                <TextView
                    android:id="@+id/label_date_format"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date Format: "
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true" />
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="16dp"
                    android:layout_toEndOf="@id/label_date_format"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="18dp">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:entries="@array/date_formats"
                        android:gravity="start|center"
                        android:popupBackground="@color/white"
                        android:spinnerMode="dropdown"
                        android:theme="@style/ThemeOverlay.AppCompat.Light" />
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <!-- Navigation Bar -->
    <LinearLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@drawable/rounded_navbar"
        android:orientation="horizontal">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:layout_gravity="center"
            android:padding="8dp"
            android:columnCount="5"
            android:rowCount="1">

            <!-- Home -->
            <FrameLayout
                android:id="@+id/nav_home"
                android:layout_columnWeight="1"
                android:layout_column="0"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:padding="2dp"
                    android:src="@drawable/home_icon_ui" />
            </FrameLayout>

            <!-- Profile -->
            <FrameLayout
                android:id="@+id/nav_profile"
                android:layout_columnWeight="1"
                android:layout_column="1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:padding="6dp"
                    android:src="@drawable/perfil_icon_ui" />
            </FrameLayout>

            <!-- Camera-->
            <FrameLayout
                android:id="@+id/nav_camera"
                android:layout_columnWeight="1"
                android:layout_column="2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/circle_button"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:padding="9dp"
                        android:src="@drawable/camera_icon_uidark"
                        app:tint="@color/white" />
                </LinearLayout>
            </FrameLayout>

            <!-- Pin -->
            <FrameLayout
                android:id="@+id/nav_location"
                android:layout_columnWeight="1"
                android:layout_column="3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:padding="10dp"
                    android:src="@drawable/pin_icon_ui"
                    app:tint="@color/white" />
            </FrameLayout>

            <!-- Settings -->
            <FrameLayout
                android:id="@+id/nav_settings"
                android:layout_columnWeight="1"
                android:layout_column="4"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:padding="4dp"
                    android:src="@drawable/settings_icon_ui" />
            </FrameLayout>

        </GridLayout>
    </LinearLayout>
</RelativeLayout>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/old_paper">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal"
        android:background="@drawable/island_topbar"
        android:gravity="center">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Book"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:fontFamily="sans-serif-condensed-medium" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topbar"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Book + Labels -->
            <LinearLayout
                android:id="@+id/book_layout"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:orientation="horizontal">
                <!-- android:layout_above="@id/navbar" -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Book Cover -->
                    <FrameLayout
                        android:id="@+id/book_cover"
                        android:layout_width="140dp"
                        android:layout_height="220dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/bookcover_carousel">
                    </FrameLayout>

                    <!-- Labels -->
                    <RelativeLayout
                        android:id="@+id/book_labels"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:layout_toRightOf="@+id/book_cover"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp">

                        <!-- Book Name -->
                        <RelativeLayout
                            android:id="@+id/book_name_layout"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/label_book_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Book Name: "
                                android:inputType="text"
                                android:textColor="@android:color/black"
                                android:textStyle="bold"
                                android:textSize="18dp">
                            </TextView>
                        </RelativeLayout>

                        <!-- Edition -->
                        <RelativeLayout
                            android:id="@+id/edition_layout"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:layout_below="@id/book_name_layout"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/label_edition_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Edition: "
                                android:inputType="text"
                                android:textColor="@android:color/black"
                                android:textStyle="bold"
                                android:textSize="18dp">
                            </TextView>
                        </RelativeLayout>

                        <!-- Release Year -->
                        <RelativeLayout
                            android:id="@+id/year_layout"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:layout_below="@id/edition_layout"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/label_release_year"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Release Year: "
                                android:inputType="text"
                                android:textColor="@android:color/black"
                                android:textStyle="bold"
                                android:textSize="18dp">
                            </TextView>
                        </RelativeLayout>

                        <!-- Author -->
                        <RelativeLayout
                            android:id="@+id/author_layout"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:layout_below="@id/year_layout"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/label_author"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Author: "
                                android:inputType="text"
                                android:textColor="@android:color/black"
                                android:textStyle="bold"
                                android:textSize="18dp">
                            </TextView>
                        </RelativeLayout>

                        <!-- Page Number -->
                        <RelativeLayout
                            android:id="@+id/page_number_layout"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:layout_below="@id/author_layout"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/label_page_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Page Number: "
                                android:inputType="text"
                                android:textColor="@android:color/black"
                                android:textStyle="bold"
                                android:textSize="18dp">
                            </TextView>
                        </RelativeLayout>

                        <!-- ISBN -->
                        <RelativeLayout
                            android:id="@+id/isbn_layout"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:layout_below="@id/page_number_layout"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/label_isbn_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ISBN: "
                                android:inputType="text"
                                android:textColor="@android:color/black"
                                android:textStyle="bold"
                                android:textSize="18dp">
                            </TextView>
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

            <View
                android:id="@+id/review_divisor"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/book_layout"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="@color/grey_sweater" />

            <!-- Status + Review + Rating -->
            <LinearLayout
                android:id="@+id/srr_layout"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal"
                android:layout_below="@+id/review_divisor">
                <!-- android:layout_above="@id/navbar" -->

                <LinearLayout
                    android:id="@+id/srr2_layout"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <!-- Status -->
                    <RelativeLayout
                        android:id="@+id/status_menu"
                        android:layout_width="160dp"
                        android:layout_height="44dp"
                        android:background="@drawable/island_topbar"
                        android:backgroundTint="@color/watch_green"
                        android:layout_margin="10dp">

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/status_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:entries="@array/status_options"
                            android:gravity="center"
                            android:background="@android:color/transparent"
                            android:popupBackground="@color/white"
                            android:spinnerMode="dropdown"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:theme="@style/ThemeOverlay.AppCompat.Light" />
                    </RelativeLayout>

                    <!-- Review -->
                    <RelativeLayout
                        android:id="@+id/review_button"
                        android:layout_width="160dp"
                        android:layout_height="44dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/island_topbar"
                        android:backgroundTint="@color/watch_green"
                        android:layout_margin="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:foreground="?attr/selectableItemBackgroundBorderless">

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="30dp"
                                android:text="Review"
                                android:textColor="@android:color/black"
                                android:textSize="18sp"
                                android:gravity="center"
                                android:layout_marginEnd="4dp" />

                            <ImageView
                                android:id="@+id/pencil_review_icon"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/pencil_icon_ui"
                                android:padding="4dp" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <!-- Rating -->




            </LinearLayout>

            <View
                android:id="@+id/review_divisor2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/srr_layout"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="@color/grey_sweater" />

        </RelativeLayout>
    </ScrollView>











    <!-- Navigation Bar -->
    <LinearLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@drawable/rounded_navbar"
        android:orientation="horizontal">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:layout_gravity="center"
            android:padding="8dp"
            android:columnCount="5"
            android:rowCount="1">

            <!-- Home -->
            <FrameLayout
                android:id="@+id/nav_home"
                android:layout_columnWeight="1"
                android:layout_column="0"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:padding="2dp"
                    android:src="@drawable/home_icon_ui" />
            </FrameLayout>

            <!-- Profile -->
            <FrameLayout
                android:id="@+id/nav_profile"
                android:layout_columnWeight="1"
                android:layout_column="1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:padding="6dp"
                    android:src="@drawable/perfil_icon_ui" />
            </FrameLayout>

            <!-- Camera-->
            <FrameLayout
                android:id="@+id/nav_camera"
                android:layout_columnWeight="1"
                android:layout_column="2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/circle_button"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:padding="9dp"
                        android:src="@drawable/camera_icon_uidark"
                        app:tint="@color/white" />
                </LinearLayout>
            </FrameLayout>

            <!-- Pin -->
            <FrameLayout
                android:id="@+id/nav_location"
                android:layout_columnWeight="1"
                android:layout_column="3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:padding="10dp"
                    android:src="@drawable/pin_icon_ui"
                    app:tint="@color/white" />
            </FrameLayout>

            <!-- Settings -->
            <FrameLayout
                android:id="@+id/nav_settings"
                android:layout_columnWeight="1"
                android:layout_column="4"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:padding="4dp"
                    android:src="@drawable/settings_icon_ui" />
            </FrameLayout>
        </GridLayout>
    </LinearLayout>
</RelativeLayout>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/old_paper">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal"
        android:background="@drawable/island_topbar"
        android:gravity="center">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="User Name Area"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:fontFamily="sans-serif-condensed-medium" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- ScrollView  -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topbar"
        android:layout_above="@id/navbar"
        android:scrollIndicators="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Your Bookshelf -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <TextView
                    android:id="@+id/your_bookshelf_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Your Bookshelf"
                    android:textColor="@color/black"
                    android:textSize="24sp"

                    android:fontFamily="sans-serif-condensed-medium"/>

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="@color/black" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bookcover_red">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <!-- Exemplo de 5 livros -->
                        <ImageView android:layout_width="120dp" android:layout_height="180dp" android:layout_margin="8dp" android:background="@color/grey_sweater"/>
                        <ImageView android:layout_width="120dp" android:layout_height="180dp" android:layout_margin="8dp" android:background="@color/grey_sweater"/>
                        <ImageView android:layout_width="120dp" android:layout_height="180dp" android:layout_margin="8dp" android:background="@color/grey_sweater"/>
                        <ImageView android:layout_width="120dp" android:layout_height="180dp" android:layout_margin="8dp" android:background="@color/grey_sweater"/>
                        <ImageView android:layout_width="120dp" android:layout_height="180dp" android:layout_margin="8dp" android:background="@color/grey_sweater"/>

                    </LinearLayout>
                </HorizontalScrollView>
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginVertical="10dp"
                android:background="@color/grey_sweater"/>

            <!-- Reading Activity -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <TextView
                    android:id="@+id/reading_activity_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Reading Activity"
                    android:textColor="@color/black"
                    android:textSize="24sp"

                    android:fontFamily="sans-serif-condensed-medium"/>

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="@color/black" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bookcover_red">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <!-- Exemplo de 5 livros -->
                        <ImageView android:layout_width="120dp" android:layout_height="180dp" android:layout_margin="8dp" android:background="@color/grey_sweater"/>
                        <ImageView android:layout_width="120dp" android:layout_height="180dp" android:layout_margin="8dp" android:background="@color/grey_sweater"/>
                        <ImageView android:layout_width="120dp" android:layout_height="180dp" android:layout_margin="8dp" android:background="@color/grey_sweater"/>
                        <ImageView android:layout_width="120dp" android:layout_height="180dp" android:layout_margin="8dp" android:background="@color/grey_sweater"/>
                        <ImageView android:layout_width="120dp" android:layout_height="180dp" android:layout_margin="8dp" android:background="@color/grey_sweater"/>

                    </LinearLayout>
                </HorizontalScrollView>
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey_sweater"
                android:layout_marginVertical="10dp"/>

            <!-- Your Wishlisted Books -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <TextView
                    android:id="@+id/your_wishlisted_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Your Wishlisted Books"
                    android:textColor="@color/black"
                    android:textSize="24sp"

                    android:fontFamily="sans-serif-condensed-medium"/>

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="@color/black" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bookcover_red">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <!-- Exemplo de 5 livros -->
                        <ImageView android:layout_width="120dp" android:layout_height="180dp" android:layout_margin="8dp" android:background="@color/grey_sweater"/>
                        <ImageView android:layout_width="120dp" android:layout_height="180dp" android:layout_margin="8dp" android:background="@color/grey_sweater"/>
                        <ImageView android:layout_width="120dp" android:layout_height="180dp" android:layout_margin="8dp" android:background="@color/grey_sweater"/>
                        <ImageView android:layout_width="120dp" android:layout_height="180dp" android:layout_margin="8dp" android:background="@color/grey_sweater"/>
                        <ImageView android:layout_width="120dp" android:layout_height="180dp" android:layout_margin="8dp" android:background="@color/grey_sweater"/>

                    </LinearLayout>
                </HorizontalScrollView>
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginVertical="10dp"
                android:background="@color/grey_sweater"/>

            <!-- User's Booklists -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <TextView
                    android:id="@+id/users_booklist_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="User's Booklist"
                    android:textColor="@color/black"
                    android:textSize="24sp"

                    android:fontFamily="sans-serif-condensed-medium"/>

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="@color/black" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bookcover_red">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <!-- Exemplo de 5 livros -->
                        <ImageView android:layout_width="120dp" android:layout_height="180dp" android:layout_margin="8dp" android:background="@color/grey_sweater"/>
                        <ImageView android:layout_width="120dp" android:layout_height="180dp" android:layout_margin="8dp" android:background="@color/grey_sweater"/>
                        <ImageView android:layout_width="120dp" android:layout_height="180dp" android:layout_margin="8dp" android:background="@color/grey_sweater"/>
                        <ImageView android:layout_width="120dp" android:layout_height="180dp" android:layout_margin="8dp" android:background="@color/grey_sweater"/>
                        <ImageView android:layout_width="120dp" android:layout_height="180dp" android:layout_margin="8dp" android:background="@color/grey_sweater"/>

                    </LinearLayout>
                </HorizontalScrollView>
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey_sweater"
                android:layout_marginVertical="10dp"/>

            <!-- Review Plot -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Review Plot"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:fontFamily="sans-serif-condensed-medium"
                android:layout_marginBottom="8dp"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/bookcover_red"
                android:layout_marginBottom="20dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:background="@color/grey_sweater"/>
            </FrameLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Navigation Bar -->
    <LinearLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@drawable/rounded_navbar"
        android:orientation="horizontal">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:layout_gravity="center"
            android:padding="8dp"
            android:columnCount="5"
            android:rowCount="1">
            <ImageView
                android:layout_columnWeight="1"
                android:layout_column="0"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="centerInside"
                android:padding="8dp"
                android:src="@drawable/home_icon_ui" />

            <ImageView
                android:layout_columnWeight="1"
                android:layout_column="1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="centerInside"
                android:padding="8dp"
                android:src="@drawable/perfil_icon_ui" />

            <LinearLayout
                android:layout_columnWeight="1"
                android:layout_column="2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/circle_button"
                android:orientation="horizontal" />

            <ImageView
                android:layout_columnWeight="1"
                android:layout_column="3"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:scaleType="centerInside"
                android:padding="8dp"
                app:tint="@color/white"
                android:src="@drawable/map_icon_ui" />

            <ImageView
                android:layout_columnWeight="1"
                android:layout_column="4"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="centerInside"
                android:padding="8dp"
                android:src="@drawable/settings_icon_ui" />
        </GridLayout>
    </LinearLayout>

</RelativeLayout>
